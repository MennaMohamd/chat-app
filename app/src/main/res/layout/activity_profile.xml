<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_activity"
    tools:context=".Profile">

<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:id="@+id/visit_profile_image"
    android:src="@drawable/profile_image"
    android:layout_marginTop="100dp"
    android:layout_marginLeft="100dp"
    android:layout_centerHorizontal="true"

    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:text="username"
    android:id="@+id/username"
    android:textSize="30dp"
    android:textStyle="bold"
    android:layout_below="@+id/visit_profile_image"
    android:layout_centerHorizontal="true"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hi,guys you are welcome"
        android:id="@+id/statment"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="send message"
    android:padding="10dp"
    android:id="@+id/buttonsendmessage"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/statment"
    android:layout_centerHorizontal="true"
    />

    <Button
        android:id="@+id/buttoncancelrequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statment"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="116dp"
        android:padding="10dp"
        android:visibility="invisible"
        android:text="cancel request " />

</RelativeLayout>